<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
<display-name>LibraryManager</display-name>
<error-page>
	<error-code>500</error-code>
	<location>/WEB-INF/View/error_500.jsp</location>
</error-page>
<servlet>
	<!-- Le nom de votre Servlet -->
	<servlet-name>Dashboard</servlet-name>
	<!-- le chemin de votre Servlet dans votre application -->
	<servlet-class>com.excilys.librarymanager.servlet.DashboardServlet</servlet-class>
</servlet>
<servlet>
	<!-- Le nom de votre Servlet -->
	<servlet-name>BorrowAdd</servlet-name>
	<!-- le chemin de votre Servlet dans votre application -->
	<servlet-class>com.excilys.librarymanager.servlet.BorrowAddServlet</servlet-class>
</servlet>
<servlet>
	<!-- Le nom de votre Servlet -->
	<servlet-name>BorrowList</servlet-name>
	<!-- le chemin de votre Servlet dans votre application -->
	<servlet-class>com.excilys.librarymanager.servlet.BorrowListServlet</servlet-class>
</servlet>

<servlet-mapping>
	<!-- Référence au nom de la Servlet  -->
	<servlet-name>Dashboard</servlet-name>
	<!-- URL à partir de laquelle votre Servlet sera accessible -->
	<url-pattern>/dashboard</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<!-- Référence au nom de la Servlet  -->
	<servlet-name>BorrowAdd</servlet-name>
	<!-- URL à partir de laquelle votre Servlet sera accessible -->
	<url-pattern>/borrow_add</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<!-- Référence au nom de la Servlet  -->
	<servlet-name>BorrowList</servlet-name>
	<!-- URL à partir de laquelle votre Servlet sera accessible -->
	<url-pattern>/borrow_list</url-pattern>
</servlet-mapping>
</web-app>
